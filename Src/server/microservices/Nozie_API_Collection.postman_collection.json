{
    "info": {
        "name": "Nozie Microservices API - Full Test Suite",
        "description": "Complete API test collection with JWT Authentication",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8080",
            "type": "string"
        },
        {
            "key": "accessToken",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1. Authentication",
            "item": [
                {
                    "name": "1.1 Register User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.success) {",
                                    "    pm.environment.set('userId', jsonData.data.id);",
                                    "    console.log('User registered with ID:', jsonData.data.id);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"password123\"\n}"
                        },
                        "url": "{{baseUrl}}/api/auth/register"
                    }
                },
                {
                    "name": "1.2 Login (Get Token)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "if (jsonData.success && jsonData.data.accessToken) {",
                                    "    pm.collectionVariables.set('accessToken', jsonData.data.accessToken);",
                                    "    console.log('Token saved successfully');",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"password123\"\n}"
                        },
                        "url": "{{baseUrl}}/api/auth/login"
                    }
                },
                {
                    "name": "1.3 Get Current User (Me)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/auth/me"
                    }
                },
                {
                    "name": "1.4 Validate Token",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/auth/validate"
                    }
                }
            ]
        },
        {
            "name": "2. Customer Service (Protected)",
            "item": [
                {
                    "name": "2.1 Create Customer",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"firebaseUid\": \"test_uid_001\",\n    \"email\": \"customer@example.com\",\n    \"fullName\": \"Nguyen Van A\",\n    \"phoneNumber\": \"0987654321\",\n    \"avatarUrl\": \"https://example.com/avatar.png\",\n    \"dateOfBirth\": \"1995-01-01\",\n    \"gender\": \"Male\"\n}"
                        },
                        "url": "{{baseUrl}}/api/customers"
                    }
                },
                {
                    "name": "2.2 Get All Customers",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/customers"
                    }
                },
                {
                    "name": "2.3 Get Customer By ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/customers/1"
                    }
                },
                {
                    "name": "2.4 Get Customer By Email",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/customers/email/customer@example.com"
                    }
                },
                {
                    "name": "2.5 Update Customer",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"customer_updated@example.com\",\n    \"fullName\": \"Nguyen Van A - Updated\",\n    \"phoneNumber\": \"0123456789\",\n    \"avatarUrl\": \"https://example.com/new_avatar.png\",\n    \"dateOfBirth\": \"1995-05-05\",\n    \"gender\": \"Male\"\n}"
                        },
                        "url": "{{baseUrl}}/api/customers/1"
                    }
                },
                {
                    "name": "2.6 Update Subscription",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/customers/1/subscription?isSubscribed=true",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "customers",
                                "1",
                                "subscription"
                            ],
                            "query": [
                                {
                                    "key": "isSubscribed",
                                    "value": "true"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "2.7 Delete Customer",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/customers/1"
                    }
                }
            ]
        },
        {
            "name": "3. Movie Service (Protected)",
            "item": [
                {
                    "name": "3.1 Create Movie",
                    "request": {
