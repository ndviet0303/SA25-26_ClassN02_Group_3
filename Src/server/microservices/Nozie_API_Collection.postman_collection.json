                            }
                        ],
                        "url": "{{baseUrl}}/api/movies/trending"
                    }
                },
                {
                    "name": "3.4 Get Free Movies",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/movies/free"
                    }
                },
                {
                    "name": "3.5 Search Movies",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/movies/search?q=interstellar"
                    }
                }
            ]
        },
        {
            "name": "4. Payment Service (Protected + RabbitMQ)",
            "item": [
                {
                    "name": "4.1 Create Payment (Triggers RabbitMQ)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"customerId\": 1,\n    \"movieId\": \"movie_id_here\",\n    \"amount\": 50000,\n    \"paymentMethod\": \"STRIPE\"\n}"
                        },
                        "url": "{{baseUrl}}/api/payments/create"
                    }
                },
                {
                    "name": "4.2 Get Transactions By Customer",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/payments/transactions/1"
                    }
                },
                {
                    "name": "4.3 Check Purchase Status",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/payments/check-purchase?customerId=1&movieId=movie_id"
                    }
                }
            ]
        },
        {
            "name": "5. Notification Service (Protected)",
            "item": [
                {
                    "name": "5.1 Get Notifications",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
