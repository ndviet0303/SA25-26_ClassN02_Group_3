                            }
                        ],
                        "url": "{{baseUrl}}/api/notifications/1"
                    }
                },
                {
                    "name": "5.2 Get Unread Count",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}"
                            }
                        ],
                        "url": "{{baseUrl}}/api/notifications/1/count"
                    }
                }
            ]
        },
        {
            "name": "6. Error Cases",
            "item": [
                {
                    "name": "6.1 Access Without Token (Should 401)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": "{{baseUrl}}/api/customers"
                    }
                },
                {
                    "name": "6.2 Access With Invalid Token (Should 401)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer invalid_token_here"
                            }
                        ],
                        "url": "{{baseUrl}}/api/customers"
                    }
                },
                {
                    "name": "6.3 Login With Wrong Password (Should 400)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"wrong_password\"\n}"
                        },
                        "url": "{{baseUrl}}/api/auth/login"
                    }
                },
                {
                    "name": "6.4 Register Duplicate Username (Should 400)",
